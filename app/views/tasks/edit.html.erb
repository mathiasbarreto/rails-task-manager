<h1>Edit Task</h1>
<%= form_for(@task) do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<%= f.label :details %>
<%= f.text_area :details, class: "form-control" %>
<!-- <= f.label :completed, "task completed" %> -->
<label><%= f.check_box :completed %> completed </label>
<%= f.submit %>
<% end %>
<br>
<%= link_to 'Back to tasks', tasks_path %>